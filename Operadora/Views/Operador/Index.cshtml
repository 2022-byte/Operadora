@model IEnumerable<Operador>
@{
    ViewData["Title"] = "Index";
}



<h1>Administrador</h1>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Lista de Operadores</h2>
		</div>
		<div class="col-6 text-end">
			
			<br/><br />
			
			<a asp-controller="Pacote" asp-action="Create" class="btn btn-dark mx-1">
				<i class="bi bi-file-plus"></i> &nbsp; Adicionar um novo Pacote
			</a>

			<a asp-controller="Pacote" asp-route-NomeCliente="@ViewContext" class="btn btn-dark mx-1">
				<i class="bi bi-file-plus"></i> &nbsp; Ver Lista de  Pacotes
			</a>
			
			

			
			<br/><br />

			<a asp-controller="Cliente" asp-action="Create" class="btn btn-dark mx-1">
				<i class="bi bi-file-plus"></i> &nbsp; Adicionar um novo Cliente
			</a>
			
			<a asp-controller="Cliente" asp-route-NomeCliente="@ViewContext" class="btn btn-dark mx-1">
				<i class="bi bi-file-plus"></i> &nbsp; Ver Lista de  Clientes
			</a>
			<br/><br />
			<br/><br />
			<a asp-controller="Operador" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-file-plus"></i> &nbsp; Adicionar um novo Operador
			</a>

			<br/><br />

		</div>
	</div>
	


	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
		<tr>
			<th>
				Nome do Operador
			</th>
			<th>
				Email do Operador
			</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td width="50%">
					@obj.NomeOperador
				</td>
				<td width="30%">
					@obj.EmailOperador
				</td>

				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Operador" asp-action="Edit" asp-route-id="@obj.IdOperador" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
						<a asp-controller="Operador" asp-action="Delete" asp-route-id="@obj.IdOperador" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> &nbsp; Delete</a>
					</div>
					<br/><br />
					<br/><br />

				</td>
			</tr>
		}
	
	
		</tbody>
	
	</table>
	
</div>