@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Index";
}



<h1>Clientes</h1>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Lista de Clientes</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-file-plus"></i> &nbsp; Adicionar um novo cliente
			</a>
				

		</div>
	</div>
	<br/><br />


	<table class="table table-bordered table-striped" style="width: 100%">
		<thead>
		<tr>
			<th>
				Nome do Cliente
			</th>
			<th>
				Email do Cliente
			</th>
			<th></th>
		</tr>
		</thead>
		<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td width="50%">
					@obj.NomeCliente
				</td>
				<td width="30%">
					@obj.Email
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Cliente" asp-action="Edit" asp-route-id="@obj.IdCliente"class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
						<a asp-controller="Cliente" asp-action="Delete" asp-route-id="@obj.IdCliente" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> &nbsp; Delete</a>
					</div>
				</td>
			</tr>
		}
	
	
		</tbody>
	
	</table>
</div>
