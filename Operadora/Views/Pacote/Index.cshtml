@model IEnumerable<Pacote>
@{
    ViewData["Title"] = "Index";
}



<h1>Pacotes</h1>
<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Lista de Pacotes</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Pacote" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-file-plus"></i> &nbsp; Adicionar um novo Pacote
			</a>
				

		</div>
	</div>
	<br/><br />


<table class="table table-bordered table-striped" style="width: 100%">
	<thead>
	<tr>
		<th>
			Nome do Pacote
		</th>
		<th>
			Conteudo Pacote
		</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var obj in Model)
	{
		<tr>
			<td width="50%">
				@obj.NomePacote
			</td>
			<td width="30%">
				@obj.ConteudoPacote 
			</td>
			<td>
				<div class="w-75 btn-group" role="group">
					<a asp-controller="Pacote" asp-action="Edit" asp-route-id="@obj.IdPacote" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
					<a asp-controller="Pacote" asp-action="Delete" asp-route-id="@obj.IdPacote" class="btn btn-danger mx-2"><i class="bi bi-trash"></i> &nbsp; Delete</a>
				</div>
			</td>
		</tr>
	}
	
	
	</tbody>
	
</table>
</div>